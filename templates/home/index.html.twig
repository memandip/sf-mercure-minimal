{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mecure rocks!!</h1>
    <ul id="mercureDiv"></ul>
</div>

<script>
    const myTopic = 'my_topic'
    const eventSource = new EventSource(`http://localhost:3000/.well-known/mercure?topic=${myTopic}`)
    const ul = document.getElementById('mercureDiv')
    eventSource.addEventListener('message', function(e){
        console.log(JSON.parse(e.data))
        let data = JSON.parse(e.data)
        let li = document.createElement('li')
        li.innerText = `Data from mercure: ${data.message}`
        ul.appendChild(li)
    })

    setInterval(function () {
        fetch('{{ path('publish_topic',{'topic':'TOPIC'}) }}'.replace('TOPIC', myTopic))
    }, 1000)
</script>  
{% endblock %}
